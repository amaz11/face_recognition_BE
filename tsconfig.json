{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ESNext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
}